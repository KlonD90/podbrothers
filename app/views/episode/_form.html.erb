<%= simple_form_for @episode, :method => :post, :url => url_for(action: @action), :html => {:multipart => true } do |f| %>
    <%= f.input :title, label: 'Название', error: 'Не введено название эпизода' %>
    <%= f.input :description, label: 'Описание', error: 'Не введено описание эпизода' %>
    <%= f.file_field :image, label: 'Картинка' %>
    <%= f.button :submit %>
<% end %>
